{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build atlantis",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "${workspaceFolder}/atlantis.exe",
        "${workspaceFolder}/src/main.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
